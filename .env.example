# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nudge

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Scheduler Configuration
# Включает автоматическое обновление статусов событий и отправку напоминаний
ENABLE_SCHEDULER=false

# Application URL (для production)
# Используется для формирования ссылок в уведомлениях
APP_URL=https://your-app.onrender.com

# Node Environment
NODE_ENV=development
